<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <!-- ✅ 1. Faces Servlet (necesario para que JSF funcione) -->
    <servlet>
        <servlet-name>Faces Servlet</servlet-name>
        <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>*.xhtml</url-pattern>
    </servlet-mapping>

    <!-- ✅ 2. Página de inicio -->
    <welcome-file-list>
        <welcome-file>bienvenida.xhtml</welcome-file>
    </welcome-file-list>

    <!-- ✅ 3. Seguridad declarativa -->
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Paginas Protegidas</web-resource-name>
            
            <url-pattern>/deportes.xhtml</url-pattern>
            <url-pattern>/detalle.xhtml</url-pattern>
            <url-pattern>/resumen.xhtml</url-pattern>
            
        </web-resource-collection>
        
        <auth-constraint>
            <role-name>sport_user</role-name> 
        </auth-constraint>
        
        </security-constraint>

    <login-config>
        <auth-method>FORM</auth-method>
        <realm-name>file</realm-name>
        <form-login-config>
            <form-login-page>/login.xhtml</form-login-page>
            <form-error-page>/error.xhtml</form-error-page>
        </form-login-config>
    </login-config>
    
    <security-role>
        <role-name>sport_user</role-name> 
    </security-role>

</web-app>
