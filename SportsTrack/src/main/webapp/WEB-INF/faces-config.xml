<?xml version="1.0" encoding="UTF-8"?>
<faces-config
    xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                        http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_3.xsd"
    version="2.3">

    <application>
        <locale-config>
            <default-locale>es</default-locale>
            <supported-locale>en</supported-locale>
        </locale-config>

        <resource-bundle>
            <base-name>messages</base-name>
            <var>msg</var>
        </resource-bundle>
    </application>

    <managed-bean>
        <managed-bean-name>deporteBean</managed-bean-name>
        <managed-bean-class>com.mycompany.sportstrack.DeporteBean</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>

    <managed-bean>
        <managed-bean-name>logoutBean</managed-bean-name>
        <managed-bean-class>com.mycompany.sportstrack.LogoutBean</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>

    <managed-bean>
        <managed-bean-name>localeBean</managed-bean-name>
        <managed-bean-class>com.mycompany.sportstrack.LocaleBean</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>

    <managed-bean>
        <managed-bean-name>pdfBean</managed-bean-name>
        <managed-bean-class>com.mycompany.sportstrack.PdfBean</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
        <managed-property>
            <property-name>deporteBean</property-name>
            <value>#{deporteBean}</value>
        </managed-property>
    </managed-bean>


    <navigation-rule>
        <from-view-id>/deportes.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>detalle.xhtml?faces-redirect=true</from-outcome>
            <to-view-id>/detalle.xhtml</to-view-id>
            <redirect />
        </navigation-case>
        <navigation-case>
            <from-outcome>resumen.xhtml?faces-redirect=true</from-outcome>
            <to-view-id>/resumen.xhtml</to-view-id>
            <redirect />
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>/detalle.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>deportes.xhtml?faces-redirect=true</from-outcome>
            <to-view-id>/deportes.xhtml</to-view-id>
            <redirect />
        </navigation-case>
         <navigation-case>
            <from-outcome>resumen.xhtml?faces-redirect=true</from-outcome>
            <to-view-id>/resumen.xhtml</to-view-id>
            <redirect />
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <from-view-id>/resumen.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>deportes.xhtml?faces-redirect=true</from-outcome>
            <to-view-id>/deportes.xhtml</to-view-id>
            <redirect />
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>*</from-view-id> <navigation-case>
            <from-outcome>/bienvenida.xhtml?faces-redirect=true</from-outcome>
            <to-view-id>/bienvenida.xhtml</to-view-id>
            <redirect />
        </navigation-case>
    </navigation-rule>

    </faces-config>
